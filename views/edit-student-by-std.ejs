<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Students info</title>
    <link rel="stylesheet" href="/edit-student.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>

    <nav>
        <div class="logo">
            <img src="https://erp.sathyabama.ac.in/assets/images/logo-new.png" alt="Logo">
        </div>
        <div class="user-profile">
            <img src="https://erp.sathyabama.ac.in/assets/images/Chancellor.jpg" alt="User Avatar">
            <div class="username">Student Mentee</div>
            <a href="/logout" class="logout-btn"><i class="fas fa-sign-out-alt"></i>  Logout</a>
        </div>
    </nav>

    <div class="container">
        <div class="sidebar">
            <h1 class="dash">Dashboard</h1>
            <div class="admin-profile">
                <div class="admin-icon"><img src="/img/student.jpg" alt="Staff Image"></div>
                <p><%=std_mentee_name.std_mentee_Name%></p>
            </div>
            <ul>
                <li><a href="/std-mentee-dashboard"><i class="fas fa-home"></i>  Home</a></li>
                <li><a href="/odop-std-mentee-question"><i class="fas fa-edit"></i>  ODOP Question</a></li>
                <li><a href="/edit-student-by-mentee"><i class="fas fa-user-plus"></i>  Edit Student</a></li>
                <li><a href="/student-mentee-stats"><i class="fas fa-file-alt"></i>  Student Statistics</a></li>
                <li><a href="/odop-std-mentee-clac"><i class="fas fa-file-alt"></i>  ODOP Review</a></li>
            </ul>
        </div>
        <div class="main-content">
            <h1>Edit Student Info</h1>
            <div class="details">
                <% std_data.forEach(function(data){ %>
                <div class="card">
                    <img src="/img/student.jpg" alt="John Doe">
                    <h2><%=data.std_name%></h2>
                    <p>Reg No: <%=data.reg_no%></p>
                    <p><%=data.email%></p>
                    <p><%=data.std_phone%></p>
                    <p><a href="/edit-student-by-mentee/Edit?std_id=<%=data.reg_no%>" style="text-decoration: none;"><i class="fas fa-edit"></i> Edit</a></p>
                </div>
                <% }); %>
            </div>  
        </div>
    </div>
</body>
</html>
