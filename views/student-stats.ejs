<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Students Stats</title>
    <link rel="stylesheet" href="student_stats.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>

    <nav>
        <div class="logo">
            <img src="https://erp.sathyabama.ac.in/assets/images/logo-new.png" alt="Logo">
        </div>
        <div class="user-profile">
            <img src="https://erp.sathyabama.ac.in/assets/images/Chancellor.jpg" alt="User Avatar">
            <div class="username">Staff</div>
            <a href="/logout" class="logout-btn"><i class="fas fa-sign-out-alt"></i>  Logout</a>
        </div>
    </nav>

    <div class="container">
        <div class="sidebar">
            <h1 class="dash">Dashboard</h1>
            <div class="admin-profile">
                <div class="admin-icon"><img src=<%=image_url%> alt="Staff Image"></div>
                <p><%=StaffName%></p>
            </div>
            <ul>
                <li><a href="/dashboard" class="active"><i class="fas fa-home"></i>  Home</a></li>
                <li><a href="/odop-mentee-question" class="active"><i class="fas fa-edit"></i>  ODOP</a></li>
                <li><a href="/edit-student" class="active"><i class="fas fa-user-plus"></i>  Edit Student</a></li>
                <li><a href="/student-stats" class="active"><i class="fas fa-file-alt"></i>  Student Statistics</a></li>
                <li><a href="/odop-mentee-clac"><i class="fas fa-file-alt"></i>  ODOP Review</a></li>
            </ul>
        </div>
        <div class="main-content">
            <h1>Student Stats</h1>
            <div class="details">
                <% Student_datas.forEach(function(data){ %>
                <div class="card">
                    <img src="/img/student.jpg" alt="John Doe">
                    <h2><%=data.std_name%></h2>
                    <p>Reg No: <%=data.reg_no%></p>
                    <p><a href="/student-stats/info?std_id=<%=data.reg_no%>" style="text-decoration: none; color: blue;"><i class="fas fa-external-link-alt"></i> Open</a></p>
                </div>
                <% }); %>
                
            </div>  
        </div>
    </div>
</body>
</html>
