<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Students info</title>
    <link rel="stylesheet" href="/edit-student.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>

    <nav>
        <div class="logo">
            <img src="https://erp.sathyabama.ac.in/assets/images/logo-new.png" alt="Logo">
        </div>
        <div class="user-profile">
            <img src="https://erp.sathyabama.ac.in/assets/images/Chancellor.jpg" alt="User Avatar">
            <div class="username">ADMIN</div>
            <a href="/logout" class="logout-btn"><i class="fas fa-sign-out-alt"></i>  Logout</a>
        </div>
    </nav>

    <div class="container">
        <div class="sidebar">
            <h1 class="dash">Dashboard</h1>
            <div class="admin-profile">
                <div class="admin-icon"><img src="/img/admin.png" alt="Staff Image"></div>
                <p>Admin</p>
            </div>
            <ul>
                <li><a href="/admin-dashboard"><i class="fas fa-home"></i>  Home</a></li>
                <li><a href="/odop-question"><i class="fas fa-edit"></i> ODOP Question</a></li>
                <li><a href="/edit-staff"><i class="fas fa-user-plus"></i>  Edit Staff</a></li>
                <li><a href="/edit-admin"><i class="fas fa-file-alt"></i>  Edit Admin</a></li>
            </ul>
        </div>
        <div class="main-content">
            <h1>Edit Staff Info</h1>
            <div class="details">
                <% datas.forEach(function(data){ %>
                <div class="card">
                    <img src="/Mentees/<%=data%>" alt="John Doe">
                    <h2><%=data.split('.')[0]%></h2>
                    <p>example@gmail.com</p>
                    <p><a href="/edit-staff/Edit?stf_name=<%=data.split('.')[0]%>" style="text-decoration: none;"><i class="fas fa-edit"></i> Edit</a></p>
                </div>
                <% }); %>
            </div>  
        </div>
    </div>
</body>
</html>
