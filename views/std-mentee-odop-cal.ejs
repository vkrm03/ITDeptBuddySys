<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ODOP Review</title>
    <link rel="stylesheet" href="odop-mentee-question.css">
    <link rel="stylesheet" href="/particular-student-stats.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>
    <nav>
        <div class="logo">
            <img src="https://erp.sathyabama.ac.in/assets/images/logo-new.png" alt="Logo">
        </div>
        <div class="user-profile">
            <img src="https://erp.sathyabama.ac.in/assets/images/Chancellor.jpg" alt="User Avatar">
            <div class="username">Student Mentee</div>
            <a href="/logout" class="logout-btn"><i class="fas fa-sign-out-alt"></i>  Logout</a>
        </div>
    </nav>



    <div class="container">
        <div class="sidebar">
            <h1 class="dash">Dashboard</h1>
            <div class="admin-profile">
                <div class="admin-icon"><img src="/img/student.jpg" alt="Staff Image"></div>
                <p><%=std_data.std_mentee_Name%></p>
            </div>
            <ul>
                <li><a href="/std-mentee-dashboard"><i class="fas fa-home"></i>  Home</a></li>
                <li><a href="/odop-std-mentee-question"><i class="fas fa-edit"></i>  ODOP Question</a></li>
                <li><a href="/edit-student-by-mentee"><i class="fas fa-user-plus"></i>  Edit Student</a></li>
                <li><a href="/student-mentee-stats"><i class="fas fa-file-alt"></i>  Student Statistics</a></li>
                <li><a href="/odop-std-mentee-clac"><i class="fas fa-file-alt"></i>  ODOP Review</a></li>
            </ul>
        </div>
        <div class="main-content">
            <h1>ODOP Question</h1>
            <table class="marks-table">
                <thead>
                    <tr>
                        <th>ODOP Weeks</th>
                        <th>Question</th>
                        <th>Deadline Date</th>
                        <th>Meeting Link</th>
                    </tr>
                </thead>
                <tbody>
                    <% 
                        let weekCounter = 1; 
                        qus_data.forEach(function(data){ 
                        %>
                        <tr>
                            <td class="day">Week <%= weekCounter %></td>
                            <td><%=data.question%></td>
                            <td><%=data.deadline%></td>
                            <td><%=data.meetinglink%></td>
                        </tr>
                        <% 
                            weekCounter++; 
                        }); %>

                </tbody>
            </table>
        </div>
    </div>
</body>
</html>
